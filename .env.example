# ResyBot Environment Configuration
# Copy this file to .env and fill in your values

# Required - Resy Authentication
RESY_AUTH_TOKEN=your_jwt_token_here
RESY_PAYMENT_ID=12345678

# Required - Telegram Notifications
TELEGRAM_BOT_TOKEN=123456789:ABC-your-bot-token
TELEGRAM_CHAT_ID=-100123456789
# Status report interval (sends scans completed, availability seen)
STATUS_REPORT_INTERVAL_HOURS=6

# Optional - Restaurant Configuration (defaults shown)
# 4 Charles = 834, releases 21 days out at 9 AM ET
RESY_RESTAURANT_ID=834
RESY_PARTY_SIZES=2,3,4
RESY_START_TIME=16
RESY_END_TIME=23
RESY_MIN_DAYS_OUT=2
RESY_MAX_DAYS_OUT=21

# Optional - Proxy (format: ip:port:user:pass)
PROXY_URL=

# Optional - Timing Configuration (defaults shown)
# Burst mode: 9 AM ET window when new dates release
BURST_START=08:59:50
BURST_END=09:01:00
BURST_DELAY_MS=100
IDLE_DELAY_MS=1500
# Timeouts: faster during burst for fail-fast behavior
BURST_TIMEOUT=5.0
IDLE_TIMEOUT=15.0

# Optional - Retry Configuration (defaults shown)
MAX_RETRIES=5
BASE_BACKOFF=2
MAX_BACKOFF=30

# Optional - Server Configuration (defaults shown)
SERVER_URL=http://127.0.0.1:8000
SERVER_PORT=8000
